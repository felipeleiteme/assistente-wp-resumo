# Supabase - OBRIGATÓRIO para dados
SUPABASE_URL=https://seu-projeto-id.supabase.co
SUPABASE_ANON_KEY=sua_anon_key_real

# Z-API - OBRIGATÓRIO para receber mensagens
ZAPI_INSTANCE_ID=seu_instance_id_real
ZAPI_TOKEN=seu_token_real
ZAPI_CLIENT_TOKEN=seu_client_token_real
ZAPI_SECRET=seu_secret_real

# Qwen AI - OBRIGATÓRIO para gerar resumos
QWEN_API_KEY=sua_chave_qwen_real
QWEN_API_URL=https://dashscope-intl.aliyuncs.com/compatible-mode/v1/chat/completions

# Gladia - Opcional (apenas se quiser transcrição de áudio)
GLADIA_API_KEY=sua_chave_gladia_real
GLADIA_API_URL=https://api.gladia.io/v2/transcription
GLADIA_DEFAULT_LANGUAGE=pt
GLADIA_POLL_INTERVAL_MS=2000
GLADIA_POLL_TIMEOUT_MS=60000

# MS Teams - Opcional (apenas se quiser notificações)
TEAMS_WEBHOOK_URL=https://sua-url-real.webhook.office.com/...

# Vercel URL - Opcional (auto-detectado)
VERCEL_URL=https://seu-projeto.vercel.app/

# GitHub Actions Secret - OBRIGATÓRIO para cron jobs
CRON_SECRET=seu_cron_secret_real

# Modo Teste: 'true' = mock (sem IA), 'false' = IA real
USE_MOCK_AI=false
